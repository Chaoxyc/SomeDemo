<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xyc.circlepercentage.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <com.xyc.circlepercentage.CirclePercentageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:outerCircleColor="@color/colorAccent"
        app:innerCircleColor="@color/colorPrimary"
        app:outerCircleBarWidth="50dp"
        app:innerCircleBarWidth="50dp"
        app:outerCircleRadius="80dp"/>
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"/>



</LinearLayout>
